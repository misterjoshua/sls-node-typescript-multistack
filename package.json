{
  "license": "MIT",
  "scripts": {
    "build": "run-s lint test build:prod",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "sls:deploy": "run-p sls:deploy:*",
    "sls:deploy:test1": "cd dist/test1 && serverless deploy",
    "sls:deploy:test2": "cd dist/test2 && serverless deploy",
    "dev:deploy": "run-s build:dev sls:deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier": "pretty-quick",
    "lint": "eslint --fix src/**/*.ts",
    "lint:init": "eslint --init",
    "hook:pre-commit": "run-s prettier lint test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s hook:pre-commit"
    }
  },
  "dependencies": {
    "aws-sdk": "^2.595.0",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^5.1.1",
    "@types/aws-lambda": "^8.10.39",
    "@types/jest": "^24.0.24",
    "@types/node": "^12.12.21",
    "@types/node-fetch": "^2.5.4",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.8.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10"
  }
}
